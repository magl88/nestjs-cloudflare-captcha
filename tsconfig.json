{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": false,
		"rootDir": "./lib",
		"outDir": "./dist",
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"nestjs-cloudflare-captcha": ["lib/index.ts"],
			"nestjs-cloudflare-captcha/*": ["lib/*"]
		}
	},
	"include": ["lib/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
